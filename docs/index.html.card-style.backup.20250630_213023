    <script>
        // Mermaid ì´ˆê¸°í™”
        mermaid.initialize({
            startOnLoad: true,
            theme: 'default',
            themeVariables: {
                primaryColor: '#667eea',
                primaryTextColor: '#24292f',
                primaryBorderColor: '#667eea',
                lineColor: '#94a3b8',
                secondaryColor: '#f1f5f9',
                tertiaryColor: '#f8fafc'
            }
        });

        // í†µê³„ ì¹´ìš´í„° ì• ë‹ˆë©”ì´ì…˜
        function animateCounters() {
            const counters = document.querySelectorAll('.stat-number');
            
            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-target'));
                const increment = target / 60; // 1ì´ˆ ë™ì•ˆ 60í”„ë ˆì„
                let current = 0;
                
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        counter.textContent = target;
                        counter.classList.add('animate');
                        clearInterval(timer);
                    } else {
                        counter.textContent = Math.floor(current);
                    }
                }, 16); // ~60fps
            });
        }

        // ë§ˆí¬ë‹¤ìš´ ë¡œë“œ ë° ë Œë”ë§
        async function loadMarkdown(filename) {
            try {
                showViewer();
                
                const response = await fetch(filename);
                if (!response.ok) {
                    throw new Error(`íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤: ${filename}`);
                }
                
                const markdown = await response.text();
                const html = marked.parse(markdown);
                
                // ì œëª© ì„¤ì •
                const title = filename.replace('.md', '').replace('-', ' ');
                document.getElementById('viewer-title').textContent = 
                    title.charAt(0).toUpperCase() + title.slice(1);
                
                // ë‚´ìš© ë Œë”ë§
                document.getElementById('viewer-content').innerHTML = html;
                
                // ì½”ë“œ í•˜ì´ë¼ì´íŒ…
                Prism.highlightAll();
                
                // Mermaid ë‹¤ì´ì–´ê·¸ë¨ ë Œë”ë§
                const mermaidElements = document.querySelectorAll('.language-mermaid, code.language-mermaid');
                mermaidElements.forEach((element, index) => {
                    const code = element.textContent;
                    const graphDiv = document.createElement('div');
                    graphDiv.className = 'mermaid';
                    graphDiv.textContent = code;
                    
                    if (element.tagName === 'CODE') {
                        element.parentElement.replaceWith(graphDiv);
                    } else {
                        element.replaceWith(graphDiv);
                    }
                });
                
                // Mermaid ë‹¤ì‹œ ì´ˆê¸°í™”
                mermaid.init();
                
                // ë¸Œë¼ìš°ì € íˆìŠ¤í† ë¦¬ ì—…ë°ì´íŠ¸
                history.pushState({page: 'document', file: filename}, '', `#${filename}`);
                
            } catch (error) {
                document.getElementById('viewer-content').innerHTML = 
                    `<div style="text-align: center; padding: 50px; color: #e74c3c;">
                        <h2>âŒ ì˜¤ë¥˜ ë°œìƒ</h2>
                        <p>${error.message}</p>
                        <button onclick="showHomepage()" style="margin-top: 20px; padding: 10px 20px; background: #667eea; color: white; border: none; border-radius: 5px; cursor: pointer;">í™ˆìœ¼ë¡œ ëŒì•„ê°€ê¸°</button>
                    </div>`;
            }
        }

        // í™ˆí˜ì´ì§€ í‘œì‹œ
        function showHomepage() {
            document.getElementById('homepage').style.display = 'block';
            document.getElementById('viewer').style.display = 'none';
            history.pushState({page: 'home'}, '', '#');
        }

        // ë·°ì–´ í‘œì‹œ
        function showViewer() {
            document.getElementById('homepage').style.display = 'none';
            document.getElementById('viewer').style.display = 'block';
        }

        // ë¸Œë¼ìš°ì € ë’¤ë¡œê°€ê¸°/ì•ìœ¼ë¡œê°€ê¸° ì²˜ë¦¬
        window.addEventListener('popstate', (event) => {
            if (!event.state || event.state.page === 'home') {
                showHomepage();
            } else if (event.state.page === 'document') {
                loadMarkdown(event.state.file);
            }
        });

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
        document.addEventListener('DOMContentLoaded', () => {
            // URL í•´ì‹œ í™•ì¸
            const hash = window.location.hash.slice(1);
            if (hash && hash.endsWith('.md')) {
                loadMarkdown(hash);
            } else {
                showHomepage();
                // í†µê³„ ì• ë‹ˆë©”ì´ì…˜ ì‹œì‘
                setTimeout(animateCounters, 500);
            }
        });

        // ì™¸ë¶€ ë§í¬ ì²˜ë¦¬
        document.addEventListener('click', (e) => {
            if (e.target.tagName === 'A' && e.target.href) {
                const url = new URL(e.target.href);
                // ê°™ì€ ë„ë©”ì¸ì˜ .md íŒŒì¼ì¸ì§€ í™•ì¸
                if (url.origin === window.location.origin && url.pathname.endsWith('.md')) {
                    e.preventDefault();
                    const filename = url.pathname.split('/').pop();
                    loadMarkdown(filename);
                }
            }
        });
    </script>
</body>
</html>